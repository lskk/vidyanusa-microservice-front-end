doctype html
html(lang='en')
  head
    title Vidyanusa | #{title}
    link(rel='shortcut icon', href='/images/shortcut-icon.png')
    link(rel='stylesheet', href='/dist/semantic.css')
    link(rel='stylesheet', href='/stylesheets/custom.css')
    link(rel='stylesheet', href='//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css')
    link(rel='stylesheet', href='//cdn.jsdelivr.net/jquery.slick/1.6.0/slick-theme.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.min.js')
    script(src='/dist/semantic.min.js')
    script(src='/javascripts/angular/vidyanusa.js')
    script(src='/javascripts/custom.js')
  body(ng-app='vidyanusaApp',ng-controller='controllerDaftar')
    section(class='ui container')
      nav(class='ui secondary pointing menu')
        block navigasi
      section(class='ui segment',style='padding: 3em 4em 3em 4em;')
        block content
      footer(align='center',class='grey-text')= copyright
    script.
      $('select.dropdown').dropdown();
