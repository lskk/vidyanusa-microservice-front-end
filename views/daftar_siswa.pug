extends templates/publicTemplateRegistration

block navigasi
  a(class='item',href='/')
    img(class='ui small image',src='/images/vidyanusa.png')
  .right.menu
    a(class='item grey-text')
      aside(class='grey-text') Tentang Vidyanusa

block content
  .sixteen.wide.column
    article.grey-text
      h3 Mendaftarkan sebagai Siswa
      if (messages.pesan)
        .ui.red.message
          i.warning.sign.icon
          | Terjadi kesalahan
          br
          span= messages.pesan
      form.ui.form(method='post', action='/public/daftar/siswa')
        .field
          label.grey-text Email
          input(type='text', name='email', placeholder='Email anda')
        .field
          label Username
          input(type='text', name='username', placeholder='Buat username')
        .field
          label Nama Lengkap
          input(type='text', name='nama_lengkap', placeholder='Nama lengkap anda')
        .field
          label Jenis Kelamin
          select.ui.dropdown(name='jenis_kelamin')
            option(value='') Pilih jenis kelamin
            option(value='M') Laki-laki
            option(value='F') Perempuan
        .field
          label Sandi
          input(type='password', name='sandi', placeholder='Buat sandi anda')
        //-
          .field
            label Kode kelas
            input(type='text', name='kode_kelas', placeholder='Kode kelas')
        button.ui.button(type='submit', style='color: white; background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);') Kirim
